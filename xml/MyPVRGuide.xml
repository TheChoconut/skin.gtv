<?xml version="1.0" encoding="UTF-8"?>
<window>
    <backgroundcolor>0xFF0E0E0F</backgroundcolor>
    <views>50</views>
    <defaultcontrol always="true">50</defaultcontrol>

    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>3840</width>
            <height>2160</height>
            <fadetime>400</fadetime>
            <texture background="true" colordiffuse="$VAR[blurcolor1]">masks/bkggrad2.png</texture>
        </control>
        <control type="image">
            <left>175</left>
            <top>16</top>
            <width>512</width>
            <height>288</height>
            <fadetime>400</fadetime>
            <aspectratio align="left" scalediffuse="false">keep</aspectratio>
            <texture background="true">$INFO[Container.ListItem.Icon]</texture>
        </control>
        <control type="image">
            <top>0</top>
            <right>0</right>
            <width>2880</width>
            <height>1620</height>
            <fadetime>200</fadetime>
            <aspectratio scalediffuse="true">scale</aspectratio>
            <texture background="true" diffuse="masks/BackgroundCornerMask.png" colordiffuse="90FFFFFF">$INFO[ListItem.EPGEventIcon]</texture>
        </control>
        <control type="group">
            <left>200</left>
            <top>256</top>
            <control type="label">
                <width>1600</width>
                <scroll>true</scroll>
                <height>200</height>
                <font>WidgetLabelInfo</font>
                <label>$INFO[ListItem.EPGEventTitle]</label>
            </control>
            <control type="label">
                <top>150</top>
                <height>200</height>
                <font>WidgetTitle</font>
                <label>$INFO[ListItem.Genre]    $INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]    $INFO[ListItem.Season] $INFO[ListItem.Episode]</label>
            </control>
            <control type="textbox">
                <top>350</top>
                <width>1600</width>
                <height>220</height>
                <font>EpisodePlot</font>
                <textcolor>TextSubLabel</textcolor>
                <label>$INFO[ListItem.Plot]</label>
            </control>
        </control>
        <control type="group">
            <top>1000</top>
            <left>100</left>
            <include content="EpgGrid">
                <param name="control_id" value="50" />
            </include>
        </control>
    </controls>
</window>
