<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- <defaultcontrol>3</defaultcontrol> -->
    <!-- <onload>SetFocus(9005,8)</onload>
    <onload>SetFocus(3)</onload>
    <onload>SetProperty(SettingsCategoryReturn,true,home)</onload> -->

    <controls>

        <control type="image">
            <width>2200</width>
            <texture colordiffuse="FF0b0e0d">general/white.png</texture>
            <animation effect="slide" start="0,0" end="-2200,0" time="200" condition="ControlGroup(5).HasFocus(0)">Conditional</animation>
        </control>
        <!-- Main view -->
        <control type="group">
            <left>0</left>
            <right>0</right>
            <top>0</top>
            <bottom>0</bottom>

            <!-- Main Menu background -->

            <animation type="WindowOpen" reversible="false">
                <effect type="slide" start="-500,0" end="0,0" time="200" />
                <effect type="fade" start="0" end="100" time="100" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="slide" start="0,0" end="-500,0" time="200" />
                <effect type="fade" start="100" end="0" time="100" />
            </animation>

            <control type="grouplist" id="3">
                <left>256</left>
                <top>0</top>
                <width>1500</width>
                <height min="60" max="2160">auto</height>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>8</itemgap>
                <align>center</align>
                <ondown>20</ondown>
                <onup>noop</onup>
                <onright>5</onright>
                <animation effect="slide" start="0,0" end="-2200,0" time="200" condition="ControlGroup(5).HasFocus(0)">Conditional</animation>
            </control>

            <control type="button" id="10">
                <width>1500</width>
                <height>256</height>
                <textoffsetx>200</textoffsetx>
                <aligny>center</aligny>
                <animation effect="zoom" reversible="false" center="780,128" time="200" start="95" end="100">Focus</animation>
                <font>ItemLabelRegular</font>
                <textcolor>TextLightGray</textcolor>
                <focusedcolor>TextDarkGray</focusedcolor>
                <texturefocus colordiffuse="SettingsListBackground" background="true" border="16">masks/Mask782x440r16.png</texturefocus>
            </control>


            <control type="grouplist" id="5">
                <animation effect="slide" start="0,0" end="-2200,0" time="200" condition="ControlGroup(5).HasFocus(0)">Conditional</animation>
                <left>2500</left>
                <top>0</top>
                <width>2000</width>
                <height min="164" max="2160">auto</height>
                <usecontrolcoords>false</usecontrolcoords>
                <orientation>vertical</orientation>
                <align>center</align>
                <itemgap>20</itemgap>
                <onleft>3</onleft>
                <onback>3</onback>
            </control>

        </control>




        <control type="button" id="20">
            <left>100</left>
            <top>1900</top>
            <include>SettingsCategoryMenuButtonTemplate</include>
            <onclick>SettingsLevelChange</onclick>
            <onup>3</onup>
        </control>




        <control type="button" id="7">
            <description>Default Button</description>
            <include>SettingButtonTemplate</include>
        </control>
        <control type="radiobutton" id="8">
            <description>Default RadioButton</description>
            <include>SettingButtonTemplate</include>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default SpinControlex</description>
            <include>SettingButtonTemplate</include>
        </control>
        <control type="edit" id="12">
            <description>Default Edit control</description>
            <include>SettingButtonTemplate</include>
        </control>
        <control type="sliderex" id="13">
            <description>Default Slider</description>
            <include>SettingButtonTemplate</include>
        </control>
        <control type="label" id="14">
            <description>Default header Label</description>
            <width>1520</width>
            <height>164</height>
            <textcolor>TextDim</textcolor>
            <font>MenuText</font>
            <textoffsetx>38</textoffsetx>
            <textoffsety>82</textoffsety>
            <align>left</align>
            <aligny>top</aligny>
        </control>

    </controls>
</window>