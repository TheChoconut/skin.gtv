<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>339</defaultcontrol>

    <onload condition="Control.IsVisible(343)">SetFocus(343)</onload>
    <onload condition="!Control.IsVisible(344)">SetFocus(344)</onload>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,-500" time="200" tween="sine">WindowOpen</animation>
            <animation effect="slide" end="0,-500" time="200" tween="sine">WindowClose</animation>
            <control type="image">
                <left>0</left>
                <width>100%</width>
                <top>0</top>
                <height>500</height>
                <texture background="true" colordiffuse="a0000000">masks/SeekbarGradientDown.png</texture>
            </control>
            <control type="image">
                <left>64</left>
                <top>64</top>
                <width>240</width>
                <height>240</height>
                <aspectratio>center</aspectratio>
                <texture background="true">$INFO[Player.Icon]</texture>
            </control>
            <control type="label">
                <left>364</left>
                <top>84</top>
                <width>2000</width>
                <height>90</height>
                <font>OSDMovieTitle</font>
                <label>$INFO[VideoPlayer.Title]</label>
                <autoscroll>true</autoscroll>
            </control>
            <control type="label">
                <left>364</left>
                <top>154</top>
                <width>1000</width>
                <height>120</height>
                <font>OSDMovieSubTitle</font>
                <label>$INFO[VideoPlayer.ChannelName]</label>
                <wrapmultiline>true</wrapmultiline>
            </control>
            <control type="label">
                <right>128</right>
                <top>84</top>
                <aligny>top</aligny>
                <align>right</align>
                <height>500</height>
                <font>LargeTitle</font>
                <label>$INFO[System.Time]</label>
            </control>
        </control>

        <control type="group">
            <animation effect="slide" start="0,500" time="200" tween="sine">WindowOpen</animation>
            <animation effect="slide" end="0,500" time="200" tween="sine">WindowClose</animation>
            <control type="grouplist" id="339">
                <top>2000</top>
                <left>0</left>
                <width max="3840">auto</width>
                <orientation>horizontal</orientation>
                <align>center</align>
                <itemgap>32</itemgap>
                <onleft>9005</onleft>
                <ondown>4002</ondown>
                <onback>SetFocus(9005)</onback>

                <!-- Track back -->
                <control type="button" id="340">
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf1da;</label>
                    <onclick>PlayerControl(Previous)</onclick>
                </control>
                <!-- Rewind -->
                <control type="button" id="341">
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf12a;</label>
                    <onclick>PlayerControl(Rewind)</onclick>
                </control>
                <!-- Stop -->
                <control type="button" id="342">
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf323;</label>
                    <onclick>SetFocus(50)</onclick>
                    <onclick>PlayerControl(Stop)</onclick>
                </control>
                <!-- Play -->
                <control type="button" id="343">
                    <visible>Player.Paused | [Player.Rewinding | Player.Forwarding]</visible>
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf2be;</label>
                    <onclick>PlayerControl(Play)</onclick>
                </control>
                <!-- Pause -->
                <control type="button" id="344">
                    <visible>!Player.Paused + ![Player.Rewinding | Player.Forwarding]</visible>
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf2ad;</label>
                    <onclick>PlayerControl(Play)</onclick>
                </control>
                <!-- Fast forward -->
                <control type="button" id="345">
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf205;</label>
                    <onclick>PlayerControl(Forward)</onclick>
                </control>
                <!-- Track forward -->
                <control type="button" id="346">
                    <left>0</left>
                    <top>0</top>
                    <width>96</width>
                    <height>96</height>
                    <textoffsetx>16</textoffsetx>
                    <texturefocus colordiffuse="TextBright" border="8">masks/Mask32x32r8.png</texturefocus>
                    <texturenofocus colordiffuse="TextDim" border="8">masks/Mask32x32r8.png</texturenofocus>
                    <font>ButtonIconSmall</font>
                    <textcolor>TextBright</textcolor>
                    <include>ButtonDefaults</include>
                    <label>&#xf1db;</label>
                    <onclick>PlayerControl(Next)</onclick>
                </control>
            </control>

        </control>
    </controls>
</window>